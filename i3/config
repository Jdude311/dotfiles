# Kill all running instances of and run Compton
exec_always --no-startup-id  compton --blur-background --blur-method kawase --blur-strength 12 --opacity-rule 100:'class_g="Termite"'  --backend glx --daemon --config ~/.config/compton/config &

# Disable Mouse Acceleration for all input devices
exec_always --no-startup-id for id in $(xinput list | grep "pointer" | cut -d '=' -f 2 | cut -f 1); do xinput --set-prop $id 'libinput Accel Profile Enabled' 0, 1; done &

